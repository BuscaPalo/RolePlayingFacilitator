<UserControl x:Class="RPF.Visual.TextInfoInput"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RPF.Visual"
             mc:Ignorable="d" 
            
             d:DesignHeight="30" d:DesignWidth="120">
    <StackPanel Orientation="Horizontal">
        <Border BorderThickness="0,0,2,0">
            <TextBlock Text="{Binding TypeData}" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        </Border>
        <TextBlock Text="{Binding Data}" VerticalAlignment="Top" HorizontalAlignment="Right"/>
    </StackPanel>
</UserControl>
